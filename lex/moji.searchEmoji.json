{
  "lexicon": 1,
  "id": "vg.nat.istat.moji.searchEmoji",
  "defs": {
    "main": {
      "type": "query",
      "description": "Search for emojis by name or alt text",
      "parameters": {
        "type": "params",
        "required": ["query"],
        "properties": {
          "query": {
            "type": "string",
            "description": "Search query to match against emoji name and alt text"
          },
          "limit": {
            "type": "integer",
            "minimum": 1,
            "maximum": 100,
            "default": 20,
            "description": "Maximum number of emojis to return"
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["emojis"],
          "properties": {
            "emojis": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "#emojiView"
              }
            }
          }
        }
      }
    },
    "emojiView": {
      "type": "object",
      "required": ["uri", "name", "url", "createdBy", "blobCid"],
      "properties": {
        "uri": {
          "type": "string",
          "format": "at-uri",
          "description": "AT-URI of the emoji record"
        },
        "blobCid": {
          "type": "string",
          "description": "CID of the emoji blob"
        },
        "name": {
          "type": "string",
          "description": "Canonical name of the emoji"
        },
        "altText": {
          "type": "string",
          "description": "Alt text description"
        },
        "url": {
          "type": "string",
          "description": "URL to the emoji image"
        },
        "createdBy": {
          "type": "string",
          "format": "did",
          "description": "DID of the user who created this emoji"
        },
        "createdByHandle": {
          "type": "string",
          "format": "handle",
          "description": "Handle of the user who created this emoji"
        }
      }
    }
  }
}
