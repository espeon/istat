{
  "lexicon": 1,
  "id": "vg.nat.istat.status.record",
  "defs": {
    "main": {
      "type": "record",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["emoji", "createdAt"],
        "properties": {
          "emoji": {
            "type": "ref",
            "description": "The emoji representing the status",
            "format": "com.atproto.repo.strongref"
          },
          "title": {
            "type": "string",
            "description": "Optional status text title",
            "maxLength": 2560,
            "maxGraphemes": 256
          },
          "description": {
            "type": "string",
            "description": "Optional status text description",
            "maxLength": 20480,
            "maxGraphemes": 2048
          },
          "expires": {
            "type": "string",
            "format": "datetime",
            "description": "Optional expiration timestamp for this status"
          },
          "createdAt": {
            "type": "string",
            "format": "datetime",
            "description": "When this status was created"
          }
        }
      }
    }
  }
}
