{
  "lexicon": 1,
  "id": "vg.nat.istat.status.listUserStatuses",
  "defs": {
    "main": {
      "type": "query",
      "description": "Get status history for a specific user",
      "parameters": {
        "type": "params",
        "required": ["handle"],
        "properties": {
          "handle": {
            "type": "string",
            "format": "handle",
            "description": "The handle of the user whose status history to retrieve"
          },
          "limit": {
            "type": "integer",
            "minimum": 1,
            "maximum": 100,
            "default": 50,
            "description": "Maximum number of statuses to return"
          },
          "cursor": {
            "type": "string",
            "description": "Pagination cursor"
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["statuses"],
          "properties": {
            "statuses": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "#userStatusView"
              }
            },
            "cursor": {
              "type": "string",
              "description": "Pagination cursor for next page"
            }
          }
        }
      }
    },
    "userStatusView": {
      "type": "object",
      "required": ["rkey", "emojiUrl", "createdAt"],
      "properties": {
        "handle": {
          "type": "string",
          "format": "handle",
          "description": "The user's handle"
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name from their profile",
          "maxLength": 640,
          "maxGraphemes": 64
        },
        "avatarUrl": {
          "type": "string",
          "description": "URL to the user's avatar image"
        },
        "rkey": {
          "type": "string",
          "description": "The record key"
        },
        "emojiUrl": {
          "type": "string",
          "description": "URL to the emoji"
        },
        "emojiName": {
          "type": "string",
          "description": "Canonical name/identifier for the emoji (no spaces, e.g. 'POGGERS', 'Cinema')"
        },
        "emojiAlt": {
          "type": "string",
          "description": "Alt text for the emoji"
        },
        "title": {
          "type": "string",
          "description": "Optional status text title",
          "maxLength": 2560,
          "maxGraphemes": 256
        },
        "description": {
          "type": "string",
          "description": "Optional status text description",
          "maxLength": 20480,
          "maxGraphemes": 2048
        },
        "expires": {
          "type": "string",
          "format": "datetime",
          "description": "Optional expiration timestamp"
        },
        "createdAt": {
          "type": "string",
          "format": "datetime",
          "description": "When this status was created"
        }
      }
    }
  }
}
