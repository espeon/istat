{
  "lexicon": 1,
  "id": "vg.nat.istat.moji.emoji",
  "defs": {
    "main": {
      "type": "record",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["emoji", "name"],
        "properties": {
          "emoji": {
            "type": "blob",
            "accept": ["image/*"],
            "maxSize": 1000000
          },
          "name": {
            "type": "string",
            "maxLength": 64,
            "description": "Canonical name/identifier for the emoji (no spaces, e.g. 'POGGERS', 'Cinema')"
          },
          "altText": {
            "type": "string",
            "maxLength": 5120,
            "maxGraphemes": 512,
            "description": "Optional alt text description for the emoji"
          }
        }
      }
    }
  }
}
